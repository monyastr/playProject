 
    <%- include ../views/navPanel.ejs %> 
    <p>Entities</p>
<div class="container">
    <div class="row">
        <div class="col-md-12">        
        <div class="table">
            <table id="mytable" class="table table-bordred table-striped">
                <thead>
                   <th>Id</th>
                   <th>Text</th>
                   <th>Dropbox</th>
                   <th>Date</th>                   
                   <th>Edit</th>
                   <th>Delete</th>
                </thead>                   
                <tbody>
                     <% for(var i=0; i<myData.length; i++) {%>
                    <tr> 
                        <td><%= myData[i].id%></td>
                        <td><%= myData[i].name%></td>
                        <td><%= myData[i].list%></td>
                        <td><%= myData[i].date%></td>                        
                        <td>
                            <form id="editForm" method="get" action="/entities/<%= myData[i].id%>/edit" > 
                                <p data-placement="top" data-toggle="tooltip" title="Edit">
                                    <button type="submit" class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit" >
                                        <span class="glyphicon glyphicon-pencil"></span>
                                    </button>
                                </p>
                                <input type="text" name="id" value="<%= myData[i].id%>" hidden/>
                            </form>
                        </td>
                        <td>
                            <form id="deleteForm" method="post" action="/entities/<%= myData[i].id%>/delete" >
                                <p data-placement="top" data-toggle="tooltip" title="Delete">
                                    <button type="submit" class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete" >
                                        <span class="glyphicon glyphicon-trash"></span>
                                    </button>
                                </p>
                            </form>
                        </td>
                    </tr>   
                    <% } %>
                    </tbody>                
                </table>  
            </div>
            </div>
    </div>
</div>

</body>
</html>